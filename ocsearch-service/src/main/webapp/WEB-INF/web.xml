<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>AddSchema</servlet-name>
    <servlet-class>com.asiainfo.ocsearch.service.schema.AddSchemaService</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddSchema</servlet-name>
    <url-pattern>/schema/add</url-pattern>
  </servlet-mapping>

  <listener>
    <listener-class>com.asiainfo.ocsearch.service.InitServlet</listener-class>
  </listener>
</web-app>
